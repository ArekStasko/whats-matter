<% layout('layouts/boilerplate') %>
<div class="posts-wrapper card container p-3 mb-3">
<% if(posts.length > 0){ %>
<% for(let post of posts) { %>
  <div class="mb-5">
    <div class="card">
      <div class="card-header">
        <h5><%= post.author.username %></h5>
        <%= post.category %>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <p class="card-text"><%= post.description %></p>
        <a href="/posts/<%=post._id%>" class="btn btn-primary">View discussion</a>
      </div>
    </div>
  </div>
<% } %>

<% } else { %>
  <div>
    <h3>There are no posts yet, can you write something? <i class="fas fa-laugh-beam"></i></h3>
  </div>
<% } %>
</div>
